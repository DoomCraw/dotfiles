install_uptime_kuma() {
        docker pull louislam/uptime-kuma:1
        docker run \
                -d \
                --restart=always \
                -p 127.0.0.1:3001:3001 \
                -v uptime-kuma:/app/data \
                --name uptime-kuma \
                louislam/uptime-kuma:1
        docker ps -afname=uptime-kuma
}
