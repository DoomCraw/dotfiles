_wfport () {
    local host=$1
    local port=$2

    while ! /usr/bin/nc -zw3 $host $port > /dev/null 2>&1; do sleep 3; done
    echo -e "Address $host:$port available."

    unset host port
}

_mkd () {
    test -d $1 || mkdir -p $1
    pushd $1
}
